<div class="col-lg-4 col-md-6 col-12 mb-5">
  <div class="hovereffect">
    <a class="post-image" href="<%- config.root %><%- item.path %>">
      <img class="img-fluid portfolio-img" src="<%- item.cover_image || theme.default_cover_image %>" alt="<%- item.title || theme.default_post_title || "Untitled" %>">
      <div class="overlay">
          <div class="overlay-text">
            <h4><%- item.title || theme.default_post_title || "Untitled" %></h4>
            <span class="date"><%- moment(item.date || '').format('YYYY-MM-DD')%></span>
          </div>  
          
      </div>
    </a>
  </div>
</div>